<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.tutorial.eventpal.LapakConfirmationActivity"
    android:backgroundTint="@color/white">

    <ImageView
        android:id="@+id/lapakconfirmationgradient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitXY"
        android:src="@drawable/lapak1gradient"/>

    <LinearLayout
        android:id="@+id/linear_lapak_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/arrowbacklapakconfirmation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:src="@drawable/arrowbacklapak1" />

        <TextView
            android:id="@+id/OrderTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/interbold"
            android:text="Order"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/titiktigalapak1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="250dp"
            android:background="@color/transparent"
            android:src="@drawable/titiktiga" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linear_lapak_confirmation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/interregular"
            android:textColor="@color/white"
            android:layout_marginStart="52dp"
            android:textSize="18sp"
            android:text="Confirmation"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/lapakconfirmationgradient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/intermedium"
            android:textSize="15sp"
            android:text="Froyonion"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="126dp"
                android:layout_height="90dp"
                android:src="@drawable/micimage"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/intersemi"
                    android:textSize="16sp"
                    android:text="Microphone Condenser"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/intermedium"
                    android:textSize="14sp"
                    android:text="1 x 21.000,00"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/intersemi"
            android:textSize="18sp"
            android:text="Adress"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <EditText
                android:id="@+id/adressOrder"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/borderorder"
                android:fontFamily="@font/interregular"
                android:inputType="number"
                android:textSize="10sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/intersemi"
            android:textSize="18sp"
            android:text="Notes"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <EditText
                android:id="@+id/notesOrder"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/borderorder"
                android:fontFamily="@font/interregular"
                android:inputType="number"
                android:textSize="10sp"/>
        </com.google.android.material.textfield.TextInputLayout>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:fontFamily="@font/intersemi"
            android:textSize="18sp"
            android:text="Payment Methods"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/paymentmethodimg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:fontFamily="@font/intersemi"
            android:textSize="18sp"
            android:text="Detail"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/grey"
                android:fontFamily="@font/intermedium"
                android:textSize="13sp"
                android:text="Total Harga(1 Barang)"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="170dp"
                android:textColor="@color/grey"
                android:fontFamily="@font/intermedium"
                android:textSize="13sp"
                android:text="Rp.19.900"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/grey"
                android:fontFamily="@font/intermedium"
                android:textSize="13sp"
                android:text="Total Harga(1 Barang)"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="170dp"
                android:textColor="@color/grey"
                android:fontFamily="@font/intermedium"
                android:textSize="13sp"
                android:text="Rp.19.900"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/grey"
                android:fontFamily="@font/intermedium"
                android:textSize="13sp"
                android:text="Total Harga(1 Barang)"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="170dp"
                android:textColor="@color/grey"
                android:fontFamily="@font/intermedium"
                android:textSize="13sp"
                android:text="Rp.19.900"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/grey"
                android:fontFamily="@font/intermedium"
                android:textSize="13sp"
                android:text="Total Harga(1 Barang)"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="170dp"
                android:textColor="@color/grey"
                android:fontFamily="@font/intermedium"
                android:textSize="13sp"
                android:text="Rp.19.900"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/intersemi"
            android:textSize="15sp"
            android:text="Total: Rpxxxxxxxx"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonOrder"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bordersign"
            android:textColor="@color/white"
            android:fontFamily="@font/intersemi"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:text="Order" />


    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>