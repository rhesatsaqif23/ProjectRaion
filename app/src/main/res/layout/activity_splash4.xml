<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context="com.tutorial.eventpal.SplashActivity2">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:src="@drawable/splashsearch" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:fontFamily="@font/intersemi"
        android:gravity="center"
        android:layout_marginHorizontal="40dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:text="Easy way to find your perfect gear" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/interregular"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="60dp"
        android:lineSpacingExtra="5sp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textAlignment="textStart"
        android:text="Get your perfect equipment for your event in just a few clicks." />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:src="@drawable/splashpagination3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bordersign"
        android:textColor="@color/white"
        android:fontFamily="@font/interbold"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:text="Start Here" />

</LinearLayout>