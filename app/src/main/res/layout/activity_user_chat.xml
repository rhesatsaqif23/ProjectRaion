<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.tutorial.eventpal.UserChatActivity">

        <ImageView
            android:id="@+id/top_gradient"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:scaleType="fitXY"
            android:layout_marginTop="-80dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/toprectangle"/>

        <LinearLayout
            android:id="@+id/arrow_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp">

            <ImageButton
                android:id="@+id/arrow"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@color/transparent"
                android:src="@drawable/arrow"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:fontFamily="@font/interbold"
                    android:textSize="22sp"
                    android:textColor="@color/lightGrey"
                    android:text="Bagus Organizer"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/online"/>

                    <TextView
                        android:id="@+id/online"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/intermedium"
                        android:layout_marginStart="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/lightGrey"
                        android:text="Online" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/top_gradient"
            android:layout_marginTop="-25dp"
            android:src="@drawable/timegradient" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/top_gradient"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="-15dp"
            android:textAlignment="center"
            android:fontFamily="@font/intermedium"
            android:textSize="14sp"
            android:text="14:40:15 left"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_panel"
        android:layout_marginTop="-42dp"
        android:layout_above="@id/bottom"
        android:padding="8dp"/>


    <ImageView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:scaleType="fitXY"
        android:src="@drawable/chat_bottom"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="20dp">

        <ImageButton
            android:id="@+id/btn_attach"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@color/transparent"
            android:src="@drawable/chatattach"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/username"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:background="@drawable/borderinputmsg"
                android:fontFamily="@font/interregular"
                android:textSize="12sp"
                android:inputType="text"
                android:hint="Message" />
        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/btn_send"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@color/transparent"
            android:src="@drawable/chatsend"/>

    </LinearLayout>
</RelativeLayout>