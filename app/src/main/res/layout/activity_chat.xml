<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.tutorial.eventpal.ChatActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/blue_gradient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.tutorial.eventpal.AgentDetailActivity3">

        <ImageView
            android:id="@+id/top_gradient"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:scaleType="fitXY"
            android:layout_marginTop="-80dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/toprectangle"/>

        <LinearLayout
            android:id="@+id/arrow_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp">

            <ImageButton
                android:id="@+id/arrow"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@color/transparent"
                android:src="@drawable/arrow"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:fontFamily="@font/interbold"
                    android:textSize="22sp"
                    android:textColor="@color/lightGrey"
                    android:text="Bagus Organizer"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/online"/>

                    <TextView
                        android:id="@+id/online"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/intermedium"
                        android:layout_marginStart="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/lightGrey"
                        android:text="Online" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<!--        <ImageView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:layout_constraintTop_toBottomOf="@id/blue_gradient"-->
<!--            android:src="@drawable/timegradient"/>-->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bookmark_chat"
        android:src="@drawable/line" />

    <LinearLayout
        android:id="@+id/bookmark_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_bookmark"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/borderbookmark"
            android:fontFamily="@font/interbold"
            android:textColor="@color/pastelOrange"
            android:textAllCaps="false"
            android:drawableStart="@drawable/bookmark"
            android:paddingStart="15dp"
            android:text="Add Bookmark"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_chat"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:background="@drawable/borderchat"
            android:fontFamily="@font/interbold"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="Chat Now"/>
    </LinearLayout>
</RelativeLayout>